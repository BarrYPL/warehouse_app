<div class="section-title">
  <a href="/"><h1>Stany magazynowe <i class="fa-solid fa-dolly"></i></h1></a>
</div>
<div class="find-content">
  <form action="/find" name="find-form" method="post" autocomplete="off">
    <div class="text-input">
      <div class="icon-div">
        <div class="icon-flip-inner">
          <div class="icon-awsme">
            <i class="fa-solid fa-magnifying-glass"></i>
          </div>
          <div class="icon-image">
            <img src="images/easters/kube.png" alt="x" id="kube-egg">
          </div>
        </div>
      </div>
      <div class="searching-bar">
        <input type="text" id="search-input" name="search-input"
        <% if @inputVal.nil? %>placeholder="Wyszukaj"
          <% else %>value="<%= @inputVal %>"
        <% end %>>
        <div id="result-div" class="result-div"></div>
      </div>
    </div>
    <input type="submit" id="find-submit" name="submit" value="szukaj">
  </form>
</div>
