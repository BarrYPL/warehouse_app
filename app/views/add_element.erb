<div class="inner-width">
  <h1>Dodaj element</h1>
  <button type="button" class="red-btn" id="return-btn" onclick="location.href='/'"><i class="fa-solid fa-people-pulling"></i> Powrót</button>
  <% unless item.nil? %>
    <%= erb :element_tab_partial, locals: {item: item} %>
  <% else %>
  <div class="new-item-main-div">
    <form class="new-item-form" action="create-new-item" method="post">
      <div class="field1">
        <fieldset>
          <legend>Dodaj do tabeli <p class="red-flag">*</p></legend>
          <% all_tables_array.each do |table| %>
          <%= erb :filter_partial, locals: { text: table.first_source_alias.to_human_text, table: table.first_source_alias.to_s } %>
          <% end %>
          <div class="radio-table-filter" id="new-table-div">
            <input type="radio" name="new-item-checkbox"  id="new-table" value="create-table">
            <label for="new-table">Nowa Tabela</label>
          </div>
          <input type="text" id="input-table-name" name="new-table-name" placeholder="Nazwij tabelę" disabled>
        </fieldset>
      </div>
      <div class="field2">
        <fieldset>
          <legend>Nazwa <p class="red-flag">*</p></legend>
          <input type="text" name="new-item-name" placeholder="Pole obowiązkowe">
        </fieldset>
      </div>
      <div class="field3">
        <fieldset>
          <legend>Ilość <p class="red-flag">*</p></legend>
          <input type="text" name="new-item-quantity" placeholder="Pole obowiązkowe">
        </fieldset>
      </div>
      <div class="field4">
        <fieldset>
          <legend>ID</legend>
          <input type="text" name="new-item-localid" id="localid-input" placeholder="Unikatowe ID" disabled>
          <div class="one-line-checkbox">
            <input type="checkbox" name="IdSelect" id="localid-checkbox" value="checked" checked>
            <label for="ID_select">AutoID</label>
          </div>
        </fieldset>
      </div>
      <div class="field5">
        <fieldset>
          <legend>Wartość</legend>
          <input type="text" name="new-item-value" placeholder="Np. 1k, 5uF">
        </fieldset>
      </div>
      <div class="field6">
        <fieldset>
          <legend>Opis</legend>
          <input type="text" name="new-item-description" placeholder="Może być puste">
        </fieldset>
      </div>
      <div class="field7">
        <fieldset>
          <legend>Nota Katalogowa</legend>
          <input type="text" name="new-item-datasheet" placeholder="https://nota-tylko.link">
        </fieldset>
      </div>
      <div class="field8">
        <fieldset>
          <legend>Lokalizacja</legend>
          <input type="text" name="new-item-location" placeholder="Może być puste">
        </fieldset>
      </div>
      <div class="field9">
        <fieldset>
          <legend>Jednostka</legend>
          <input type="text" name="new-item-unit" id="unit-input" placeholder="Bez przedrostka SI" disabled>
          <div class="one-line-checkbox">
            <input type="checkbox" name="unit-select" id="unit-checkbox" value="checked" checked>
            <label for="unit-select">AutoUnit</label>
          </div>
        </fieldset>
      </div>
      <input type="submit" id="new-item-submit" class="red-btn" value="Dodaj">
    </form>
  </div>
  <% end %>
</div>
